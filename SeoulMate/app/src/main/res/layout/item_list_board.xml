<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/relativelayout_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:textSize="20dp"/>

            <ImageView
                android:id="@+id/iv_crown"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_toRightOf="@+id/tv_title"
                android:layout_marginLeft="5dp"
                android:layout_centerVertical="true"
                android:background="@drawable/ic_crown"
                android:visibility="invisible"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/txt_close_request"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/selector_dark_violet_full_20"
            android:gravity="center"
            android:text="@string/closed"
            android:textColor="@color/cf_white"
            android:textStyle="bold"
            android:textSize="15dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/relativelayout_1"
            android:layout_marginLeft="17dp">

            <TextView
                android:id="@+id/tv_payment_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" / "
                android:textSize="17dp"/>

            <TextView
                android:id="@+id/tv_guide_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17dp"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>